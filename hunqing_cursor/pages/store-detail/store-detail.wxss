/* pages/store-detail/store-detail.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--warm-white);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/* 商户图片轮播 */
.store-swiper {
  width: 100%;
  height: 500rpx;
}

.store-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 商户信息 */
.store-info {
  margin-top: -20rpx;
  border-radius: 30rpx 30rpx 0 0;
  position: relative;
  z-index: 1;
}

.store-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.store-name {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-dark);
  flex: 1;
}

.store-rating {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.rating-star {
  color: var(--gold);
  font-size: 28rpx;
  margin-right: 5rpx;
}

.rating-value {
  font-size: 32rpx;
  color: var(--text-dark);
  font-weight: bold;
}

.store-meta {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.meta-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.meta-text {
  font-size: 28rpx;
  color: var(--text-gray);
  flex: 1;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-red);
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid var(--border-color);
}

/* 商户描述 */
.store-description {
  margin-top: 20rpx;
}

.description-text {
  font-size: 28rpx;
  color: var(--text-dark);
  line-height: 1.8;
}

/* 服务项目 */
.store-services {
  margin-top: 20rpx;
}

.services-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 15rpx;
  background: var(--light-red);
  border-radius: 10rpx;
}

.service-icon {
  color: var(--primary-red);
  font-size: 28rpx;
  margin-right: 15rpx;
  font-weight: bold;
}

.service-name {
  font-size: 28rpx;
  color: var(--text-dark);
}

/* 商户商品 */
.store-products {
  margin-top: 20rpx;
}

.products-list {
  display: flex;
  flex-direction: column;
  gap: 0;
  margin-top: 20rpx;
}

.product-item {
  width: 100%;
}

/* 评论区域 */
.store-comments {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.comments-list {
  margin-top: 20rpx;
}

.no-comments {
  text-align: center;
  padding: 50rpx 0;
  color: var(--text-gray);
  font-size: 28rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: var(--text-gray);
  font-size: 28rpx;
}

