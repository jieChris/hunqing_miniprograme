.dashboard {
  padding: 32rpx;
  background: #fff8f0;
  min-height: 100vh;
}

.header {
  margin-bottom: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.subtitle {
  color: #999;
  font-size: 24rpx;
}

.stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.card {
  flex: 1;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(233, 30, 99, 0.1);
}

.card:last-child {
  margin-right: 0;
}

.value {
  font-size: 40rpx;
  font-weight: 600;
  color: #e91e63;
}

.label {
  display: block;
  margin-top: 12rpx;
  color: #999;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.suggestion {
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border-left: 8rpx solid #e91e63;
}
