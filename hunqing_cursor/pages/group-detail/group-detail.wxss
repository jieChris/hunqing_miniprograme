/* pages/group-detail/group-detail.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--warm-white);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  padding-bottom: 120rpx;
}

/* 团购图片轮播 */
.group-swiper {
  width: 100%;
  height: 500rpx;
}

.group-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 团购头部信息 */
.group-header {
  margin-top: -20rpx;
  border-radius: 30rpx 30rpx 0 0;
  position: relative;
  z-index: 1;
}

.group-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.group-rating {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  font-size: 26rpx;
}

.rating-star {
  color: var(--gold);
  font-size: 28rpx;
  margin-right: 5rpx;
}

.rating-value {
  color: var(--text-dark);
  margin-right: 20rpx;
  font-weight: bold;
}

.sales-text {
  color: var(--text-gray);
}

.group-price {
  display: flex;
  align-items: baseline;
  position: relative;
}

.current-price {
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.original-price {
  font-size: 28rpx;
  color: var(--text-gray);
  text-decoration: line-through;
  margin-right: 20rpx;
}

.discount-badge {
  background: var(--accent-red);
  border-radius: 8rpx;
  padding: 5rpx 15rpx;
}

.discount-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-red);
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid var(--border-color);
}

/* 描述文本 */
.description-text,
.details-text,
.notice-text {
  font-size: 28rpx;
  color: var(--text-dark);
  line-height: 1.8;
  white-space: pre-line;
}

/* 适用商户 */
.applicable-stores {
  margin-top: 20rpx;
}

.stores-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.store-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.store-item:last-child {
  border-bottom: none;
}

.store-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.store-name {
  font-size: 30rpx;
  color: var(--text-dark);
  margin-bottom: 10rpx;
}

.store-address {
  font-size: 24rpx;
}

.arrow-icon {
  font-size: 40rpx;
  color: var(--text-gray);
  margin-left: 20rpx;
}

/* 评论区域 */
.group-comments {
  margin-top: 20rpx;
}

.comments-list {
  margin-top: 20rpx;
}

/* 底部购买栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 20rpx rgba(233, 30, 99, 0.1);
  z-index: 100;
}

.price-info {
  display: flex;
  flex-direction: column;
}

.price-label {
  font-size: 24rpx;
  color: var(--text-gray);
  margin-bottom: 5rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
}

.buy-btn {
  padding: 24rpx 80rpx;
  font-size: 32rpx;
  border-radius: 50rpx;
  margin-top: 20rpx;
  margin-right: 0;
  transform: translateX(80rpx);
}

/* 底部占位 */
.bottom-placeholder {
  height: 120rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: var(--text-gray);
  font-size: 28rpx;
}

.payment-status {
  position: fixed;
  bottom: 140rpx;
  left: 30rpx;
  right: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(233, 30, 99, 0.12);
  color: var(--text-dark);
  font-size: 26rpx;
  z-index: 90;
}

