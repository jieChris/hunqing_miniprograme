.profile-page {
  padding: 32rpx;
  min-height: 100vh;
  background: #fff8f0;
}

.user-card {
  display: flex;
  padding: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(233, 30, 99, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #111;
}

.role {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #e91e63;
}

.login-placeholder {
  padding: 48rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(233, 30, 99, 0.08);
}

.login-placeholder .title {
  display: block;
  color: #666;
  margin-bottom: 24rpx;
}

button.primary {
  background: linear-gradient(45deg, #e91e63, #ff6f91);
  color: #fff;
}

.entry-panel .entry {
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(233, 30, 99, 0.2);
}

.entry-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.entry-desc {
  display: block;
  margin-top: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.logout {
  margin-top: 24rpx;
  color: #e91e63;
  border: 1rpx solid #e91e63;
}
