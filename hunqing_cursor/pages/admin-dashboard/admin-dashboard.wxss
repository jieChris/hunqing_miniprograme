.admin-page {
  padding: 32rpx;
  background: #fff8f0;
  min-height: 100vh;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(233, 30, 99, 0.1);
}

.name {
  font-size: 32rpx;
  font-weight: 600;
}

.desc {
  display: block;
  margin-top: 12rpx;
  color: #999;
}

button.primary {
  margin-top: 16rpx;
  background: linear-gradient(45deg, #e91e63, #ff6f91);
  color: #fff;
}

.empty {
  color: #bbb;
  padding: 24rpx 0;
  text-align: center;
}
